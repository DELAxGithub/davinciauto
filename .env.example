# Copy this file to `.env` and fill in the secrets.

# --- Core LLM / AI providers ---
OPENAI_API_KEY=your-openai-key
GEMINI_API_KEY=your-gemini-key
ANTHROPIC_API_KEY=your-anthropic-key

# --- Azure Speech (Narration) ---
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=eastus2
# Optional per-role overrides
# AZURE_SPEECH_VOICE=ja-JP-NanamiNeural
# AZURE_SPEECH_VOICE_NARRATION=ja-JP-NanamiNeural
# AZURE_SPEECH_VOICE_DIALOGUE=ja-JP-KeitaNeural
# AZURE_SPEECH_VOICE_FEMALE=ja-JP-MayuNeural
# AZURE_SPEECH_VOICE_MALE=ja-JP-KeitaNeural

# --- ElevenLabs (BGM / SE generation) ---
ELEVENLABS_API_KEY=your-elevenlabs-key

# --- HTTP / rate limits ---
HTTP_TIMEOUT=90
RATE_LIMIT_SLEEP=1.0

# --- Cost estimation defaults ---
LLM_TOKENS_PER_CHAR=0.33
LLM_IN_COST_PER_1K_TOKENS=0.0035
LLM_OUT_COST_PER_1K_TOKENS=0.0100
LLM_CURRENCY_RATE_USD_JPY=160

# --- Preferred LLM provider ---
LLM_PROVIDER=gemini
GEMINI_MODEL=gemini-2.5-pro

# --- Storyblocks API (optional) ---
STORYBLOCKS_PUBLIC_KEY=your-storyblocks-public-key
STORYBLOCKS_PRIVATE_KEY=your-storyblocks-private-key
STORYBLOCKS_API_KEY=your-storyblocks-api-key

# --- Misc ---
VOCAB_PATH=/Users/hiroshikodera/repos/_active/tools/davinciauto/config/controlled_vocab.yaml
